<section class="scallop-top top-padding-by-3 main-content light-grey-bg-color">
    <div class="layout-container layout-centered">
        <div class="property-search margin-top-by-28 margin-bottom-by-20">
            <%= form_tag("/accommodations", {method: 'get', class: 'gw no-gutter'}) do %>
                <fieldset class="g sm-one-whole md-five-twelfths">
                    <label class="is-visually-hidden">Rooms</label>
                    <div class="select-style">
                        <select name="area">
                            <option disabled selected>Rooms</option>
                            <option value="all">Any</option>
                            <option value="el Pelican">el Pelican</option>
                            <option value="La Sala">La Sala</option>
                            <option value="La Paloma">La Paloma</option>
                            <option value="La chuparosa">La chuparosa</option>
                            <option value="courtyard 1">courtyard 1</option>
                            <option value="courtyard 2">courtyard 2</option>
                            <option value="La Aguila">La Aguila</option>
                        </select>
                    </div>
                </fieldset>
                <fieldset class="g sm-one-third md-one-seventh">
                    <input id="start_date" class="no-borders datepicker" type="text" name="start_date" placeholder="Arrive">
                </fieldset>
                <fieldset class="g sm-one-third md-one-seventh">
                    <input id="end_date" class="no-borders datepicker" type="text" name="end_date" placeholder="Depart">
                </fieldset>
                <fieldset class="g sm-one-fourth md-one-eighth text-align-right">
                    <label class="is-visually-hidden" for="guests">Guests</label>
                    <div class="select-style">
                        <select name="guests">
                            <option disabled selected>Guests</option>
                            <option value="all">Any</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>
                    </div>
                </fieldset>
                <footer class="g md-two-twelfths">
                    <input class="btn btn--brown no-min-width max-width" type="submit" value="Search">
                </footer>
            <%- end %>
        </div>
    </div>
</section>
